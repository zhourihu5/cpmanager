<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="12dp" android:paddingRight="7dp"
        android:paddingTop="16dp" android:paddingBottom="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp">
            <TextView android:id="@+id/tvName"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_title"
                android:textSize="16sp"
                android:text="专用增值税发票"/>
            <TextView android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="已寄出"/>

        </LinearLayout>
        <TextView android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="申请时间"/>
        <TextView android:id="@+id/tvCpname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="公司信息"/>
        <TextView android:id="@+id/tvNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="开票金额"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_divider_line"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>


</LinearLayout>