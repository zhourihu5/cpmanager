<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_layout_public"
        android:background="@android:color/white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout android:id="@+id/llBusinessService"
                android:layout_width="81dp"
                android:layout_height="0dp" android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView android:id="@+id/tvBusinessService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableTop="@drawable/business_service"
                    android:drawablePadding="12dp"
                    android:text="工商服务"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/llTaxService"
                android:layout_width="81dp"
                android:layout_height="0dp" android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView android:id="@+id/tvTaxService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableTop="@drawable/tax_service"
                    android:drawablePadding="12dp"
                    android:text="财税服务"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/llIpService"
                android:layout_width="81dp"
                android:layout_height="0dp" android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView android:id="@+id/tvIpService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableTop="@drawable/intellectual_property"
                    android:drawablePadding="12dp"
                    android:text="知识产权"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/llGovermentService"
                android:layout_width="81dp"
                android:layout_height="0dp" android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView android:id="@+id/tvGovermentService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableTop="@drawable/goverment_service"
                    android:drawablePadding="12dp"
                    android:text="行政审批"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/llSocialInsurance"
                android:layout_width="81dp"
                android:layout_height="0dp" android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView android:id="@+id/tvSocialInsurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableTop="@drawable/social_insurance"
                    android:drawablePadding="12dp"
                    android:text="人事社保"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_bg"/>
        <com.yiqiao.cpmanager.widget.UnScrollViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

</LinearLayout>