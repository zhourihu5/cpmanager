<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout style="@style/item_invoice_preset_ll_white_container"
        android:layout_marginTop="10dp">

        <include layout="@layout/item_invoice_preset_normal_info"
            android:visibility="visible"/>

        <include layout="@layout/item_invoice_preset_special_info"
            android:visibility="visible"/>

        <include layout="@layout/item_invoice_preset_receiver_info"
            android:visibility="visible"/>


    </LinearLayout>
    <LinearLayout style="@style/item_invoice_preset_ll_white_container"
        android:orientation="horizontal" android:gravity="center_vertical"
        android:paddingTop="12dp" android:paddingBottom="12dp"
        android:layout_marginTop="1dp">
        <TextView
            android:text="设为默认:"
            android:layout_width="0dp" android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_launcher"
            />
        <TextView
            android:text="编辑:"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawablePadding="10dp"
            />
        <TextView
            android:text="删除:"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawablePadding="10dp"
            />
    </LinearLayout>
</LinearLayout>