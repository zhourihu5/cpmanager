<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <include layout="@layout/toolbar_layout_public"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg"/>

    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/et_invoice_add_head_bg"
            android:paddingLeft="18dp"
            android:paddingRight="16dp"
            android:maxLength="11"
            android:inputType="phone"
            android:hint="手机号码"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingRight="16dp"
            android:background="@drawable/et_invoice_add_head_bg"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
            <EditText
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="45dp"
                android:paddingLeft="18dp"
                android:paddingRight="16dp"
                android:maxLength="6"
                android:inputType="phone"
                android:hint="验证码"
                android:singleLine="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/blue_bt_repay_bg"
               />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/et_invoice_add_head_bg"
            android:paddingLeft="18dp"
            android:paddingRight="16dp"
            android:maxLength="20"
            android:inputType="textPassword"
            android:hint="6位以上新密码"
            android:layout_marginBottom="10dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:background="@drawable/blue_bt_pay_order_bg"
            android:textColor="@android:color/white"
            android:text="提交"/>
    </LinearLayout>
</LinearLayout>