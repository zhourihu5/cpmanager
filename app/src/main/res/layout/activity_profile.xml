<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_divider_line"
    android:id="@+id/viewMain">
    <include layout="@layout/toolbar_layout_public"/>

    <LinearLayout android:id="@+id/llHead"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="11dp"
       >
        <ImageView android:id="@+id/ivLogo"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/blue_bt_repay_bg"
            android:text="修改"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="11dp"
        android:padding="16dp">
        <TextView
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_title"
            android:text="用户名"/>
        <TextView android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:padding="16dp">
        <TextView
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_title"
            android:text="联系电话"/>
        <TextView android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/llModifyPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="11dp"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_title"
            android:text="登录密码"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go"/>
    </LinearLayout>
</LinearLayout>