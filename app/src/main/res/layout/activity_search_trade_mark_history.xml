<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@drawable/gradient_green_search_trademark_history_bg">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@drawable/gradient_green_search_trademark_history_bg"
            app:statusBarScrim="@drawable/gradient_green_search_trademark_history_bg"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:title=" "
            >
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:layout_width="match_parent"
                android:minHeight="?attr/actionBarSize"
                android:layout_height="44dp"
                android:layout_gravity="top"
                android:gravity="top"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                >
                <include layout="@layout/toolbar_layout_public"
                    app:layout_collapseMode="pin"/>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
        <LinearLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
           >

            <EditText android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:drawableLeft="@drawable/search"
                android:background="@drawable/white_search_bg"
                android:paddingLeft="12dp"
                android:drawablePadding="12dp"
                android:hint="请输入企业名、人名、品牌等关键字"
                android:textSize="14sp"
                android:textColor="@color/text_general"
                android:textColorHint="@color/text_hint"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:ellipsize="start"/>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:paddingLeft="17dp"
            android:gravity="center_vertical"
            android:background="@color/gray_divider_line"
            android:textColor="@color/text_general"
            android:text="搜索历史"/>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@android:color/white">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

       <!-- <include layout="@layout/search_bottom_clear_hitory" />-->

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>





