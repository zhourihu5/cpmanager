<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="@drawable/white_pop_photo_bg"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView android:id="@+id/tvTakephoto"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1"
            android:gravity="center"
            android:text="拍照"
            android:textColor="@color/blue_bt_repay_bg"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_divider_line"/>
        <TextView android:id="@+id/tvGallery"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1"
            android:gravity="center"
            android:text="从手机相册选择"
            android:textColor="@color/blue_bt_repay_bg"/>
    </LinearLayout>
    <TextView android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/white_pop_photo_bg"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/blue_bt_repay_bg"/>
</LinearLayout>