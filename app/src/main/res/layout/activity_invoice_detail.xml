<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/toolbar_layout_public"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:text="开票信息"
                style="@style/tv_invoice_detail_label" />
            <LinearLayout style="@style/ll_invoice_detail_container">
                <LinearLayout style="@style/ll_invoice_detail"
                    android:layout_marginTop="0dp">
                    <TextView
                        android:text="开票时间"
                        style="@style/tv_invoice_detail_title" />
                    <TextView android:id="@+id/tvDate"
                        android:text="xxxxxx"
                        style="@style/tv_invoice_detail_value" />
                </LinearLayout>
                <LinearLayout
                    style="@style/ll_invoice_detail">
                    <TextView
                        style="@style/tv_invoice_detail_title"
                        android:text="开票状态"/>
                    <TextView android:id="@+id/tvStatus"
                        style="@style/tv_invoice_detail_value"
                        android:text="xxxxxx"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/ll_invoice_detail">
                    <TextView
                        style="@style/tv_invoice_detail_title"
                        android:text="开票类型"/>
                    <TextView android:id="@+id/tvType"
                        style="@style/tv_invoice_detail_value"
                        android:text="xxxxxx"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/ll_invoice_detail">
                    <TextView
                        style="@style/tv_invoice_detail_title"
                        android:text="开票抬头"/>
                    <TextView android:id="@+id/tvHeadinfo"
                        style="@style/tv_invoice_detail_value"
                        android:text="xxxxxx"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:text="开票订单"
                style="@style/tv_invoice_detail_label" />

            <LinearLayout style="@style/ll_invoice_detail_container">
                <LinearLayout style="@style/ll_invoice_detail"
                    android:layout_marginTop="0dp">
                    <TextView
                        android:text="订单号"
                        style="@style/tv_invoice_detail_title" />
                    <TextView android:id="@+id/tvOrderNum"
                        android:text="xxxxxx"
                        style="@style/tv_invoice_detail_value" />
                </LinearLayout>
                <LinearLayout
                    style="@style/ll_invoice_detail">
                    <TextView
                        style="@style/tv_invoice_detail_title"
                        android:text="开票状态"
                        android:visibility="gone"/>
                    <TextView android:id="@+id/tvCpRegist"
                        style="@style/tv_invoice_detail_value"
                        android:text="有限责任公司注册"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/ll_invoice_detail">
                    <TextView
                        style="@style/tv_invoice_detail_title"
                        android:text="开票金额"/>
                    <TextView android:id="@+id/tvMoney"
                        style="@style/tv_invoice_detail_value"
                        android:text="xxxxxx"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:text="收件人信息"
                style="@style/tv_invoice_detail_label" />

            <LinearLayout style="@style/ll_invoice_detail_container">
                <LinearLayout style="@style/ll_invoice_detail"
                    android:layout_marginTop="0dp">
                    <TextView
                        android:text="联系人"
                        style="@style/tv_invoice_detail_title" />
                    <TextView android:id="@+id/tvLinkman"
                        android:text="xxxxxx"
                        style="@style/tv_invoice_detail_value" />
                </LinearLayout>
                <LinearLayout
                    style="@style/ll_invoice_detail">
                    <TextView
                        style="@style/tv_invoice_detail_title"
                        android:text="联系电话"
                        android:visibility="visible"/>
                    <TextView android:id="@+id/tvPhone"
                        style="@style/tv_invoice_detail_value"
                        android:text="xxxxx"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/ll_invoice_detail">
                    <TextView
                        style="@style/tv_invoice_detail_title"
                        android:text="详细地址"/>
                    <TextView android:id="@+id/tvAddress"
                        style="@style/tv_invoice_detail_value"
                        android:text="xxxxxx"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:text="物流跟踪"
                style="@style/tv_invoice_detail_label" />

            <LinearLayout style="@style/ll_invoice_detail_container">
                <LinearLayout style="@style/ll_invoice_detail"
                    android:layout_marginTop="0dp">
                    <TextView
                        android:text="快递公司"
                        style="@style/tv_invoice_detail_title" />
                    <TextView android:id="@+id/tvExpressCp"
                        android:text="xxxxxx"
                        style="@style/tv_invoice_detail_value" />
                </LinearLayout>
                <LinearLayout
                    style="@style/ll_invoice_detail">
                    <TextView
                        style="@style/tv_invoice_detail_title"
                        android:text="快递单号"
                        android:visibility="visible"/>

                    <TextView android:id="@+id/tvExpressNum"
                        style="@style/tv_invoice_detail_value"
                        android:text="xxxxx"
                         />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>