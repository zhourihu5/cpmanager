<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="20dp">
        <ImageView android:id="@+id/ivLine"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/llContent"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher"
            android:layout_marginRight="12dp"/>
        <LinearLayout android:layout_toRightOf="@+id/ivLine"
            android:id="@+id/llContent"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bt_green_item_service_detail_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="合同签订"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016.06.04"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="已签约，合同编号"
                android:id="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="right"
                android:text="查看合同"
                android:visibility="visible"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>