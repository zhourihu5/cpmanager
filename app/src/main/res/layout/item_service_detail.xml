<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="20dp"
    android:background="@color/gray_bg">
    <LinearLayout android:id="@+id/ivLine"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/llContent"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/line_blue"
            />
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/service_progress_blue"
            />
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/line_blue"
            />
    </LinearLayout>
    <ImageView android:id="@+id/ivTriangle"
        android:layout_toRightOf="@+id/ivLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/triangle_left_white"/>
    <LinearLayout android:layout_toRightOf="@+id/ivTriangle"
        android:id="@+id/llContent"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_search_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="合同签订"
                android:textColor="@color/text_black_title"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="2016.06.04"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="已签约，合同编号"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="right"
            android:text="查看合同"
            android:visibility="visible"/>
    </LinearLayout>
</RelativeLayout>

