<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
     >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="18dp"
        android:src="@drawable/triangle_up_white"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/white_pop_photo_bg"
        android:layout_marginRight="5dp" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout android:id="@+id/llMyCp"
            android:layout_width="140dp"
            android:layout_height="46dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_my_company"/>
            <TextView android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_title"
                android:textSize="16dp"
                android:text="我的公司"/>
        </LinearLayout>
        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/gray_bg"/>
        <LinearLayout android:id="@+id/llSearchCp"
            android:layout_width="140dp"
            android:layout_height="46dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_search_cp"/>
            <TextView android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_title"
                android:textSize="16dp"
                android:text="搜索企业"/>
        </LinearLayout>
        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/gray_bg"/>
        <LinearLayout android:id="@+id/llSearchTrademark"
            android:layout_width="140dp"
            android:layout_height="46dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_search_trademark"/>
            <TextView android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_title"
                android:textSize="16dp"
                android:text="查询商标"/>
        </LinearLayout>
        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/gray_bg"/>
        <LinearLayout android:id="@+id/llNoticeCenter"
            android:layout_width="140dp"
            android:layout_height="46dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_news_menu"/>
            <TextView android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_title"
                android:textSize="16dp"
                android:text="消息中心"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>