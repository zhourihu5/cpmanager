<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <EditText android:id="@+id/etCode"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="32dp"
            android:singleLine="true"
            android:maxLength="6"
            android:background="@null"
            android:drawablePadding="32dp"
            android:hint="请输入验证码"
            android:drawableLeft="@drawable/icon_vericode"/>
        <TextView android:id="@+id/tvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_bt_repay_bg"
            android:text="发送验证码"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg"/>
    <Button android:id="@+id/btLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:background="@drawable/blue_bt_pay_order_bg"
        android:textColor="@android:color/white"
        android:text="快捷登录"/>

</LinearLayout>