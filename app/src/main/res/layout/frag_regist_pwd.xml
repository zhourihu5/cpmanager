<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:orientation="vertical">
    <EditText android:id="@+id/etPwd"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:singleLine="true"
        android:maxLength="20"
        android:inputType="textPassword"
        android:background="@null"
        android:drawablePadding="32dp"
        android:hint="请设置6-20位密码"
        android:drawableLeft="@drawable/icon_pwd"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg"/>
    <Button android:id="@+id/btRegist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:background="@drawable/blue_bt_pay_order_bg"
        android:textColor="@android:color/white"
        android:text="注册"/>

    <LinearLayout android:id="@+id/llAgreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击注册即表示您同意"/>
        <TextView android:id="@+id/tvAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="《注册协议》"
            android:textColor="@color/blue_bt_repay_bg"/>
    </LinearLayout>
</LinearLayout>